<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:tag="front"
    android:id="@+id/front"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Rec_color"
        android:orientation="vertical"
        android:id="@+id/top_layout">

        <TextView
            android:id="@+id/eventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@color/Rec_color">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Today"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/first_Emoji"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"/>

            <ImageView
                android:id="@+id/second_Emoji"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"/>

            <ImageView
                android:id="@+id/third_Emoji"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventTitle"
                android:text="2 Nights in Alice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="35 Km away, 10:45"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_Image"
                    android:layout_gravity="end"/>

                <TextView
                    android:id="@+id/fraction_Friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="2/8" />
            </LinearLayout>

            <TextView
                android:id="@+id/number_Friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|end"
                android:text="1 Friend" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>




